
{
    "manifest_version": 2,
  
    "name": "Schoology Planner Extension",
    "description": "A dropdown menu of all your Schoology assignments, accessible even outside of Schoology.",
    "version": "1",
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ],
     "content_scripts": [
        {
            "matches": [
                "https://*.schoology.com/*"
            ],
            "js": [
                "jquery.js",
                "popup.js"
                

            ],
            "run_at": "document_end"
        }
    ]
  }