{
    "manifest_version": 2,
  
    "name": "Schoology Planner Extension",
    "description": "We don't know what this does yet.",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "tabs"
     ],
     "content_scripts": [
        {
            "matches": [
                "https://*.schoology.com/*"
            ],
            "js": [
                "popup.js",
                "planner.js"
            ],
            "run_at": "document_end"
        }
    ]
  }